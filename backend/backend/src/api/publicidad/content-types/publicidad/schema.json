{
  "kind": "collectionType",
  "collectionName": "publicidades",
  "info": {
    "singularName": "publicidad",
    "pluralName": "publicidades",
    "displayName": "Publicidad",
    "description": "Publicidades para mostrar en pantalla TV"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titulo": {
      "type": "string",
      "required": true
    },
    "descripcion": {
      "type": "text"
    },
    "imagen": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "url": {
      "type": "string",
      "description": "URL opcional para el enlace de la publicidad"
    },
    "orden": {
      "type": "integer",
      "default": 0
    },
    "activa": {
      "type": "boolean",
      "default": true
    },
    "fechaInicio": {
      "type": "date"
    },
    "fechaFin": {
      "type": "date"
    }
  }
}

