{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && mkdir -p public/uploads && npm run build"
  },
  "deploy": {
    "startCommand": "mkdir -p public/uploads && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

